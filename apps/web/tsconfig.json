{
  "extends": "@serlo/typescript-config/base.json",
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"],
      "@editor/*": ["../../packages/editor/src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "module": "esnext",
    "moduleResolution": "bundler"
  },
  "include": [
    "custom.d.ts",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "shared/tailwind-base.js",
    "../../packages/editor/src/**/*.ts",
    "../../packages/editor/src/**/*.tsx"
  ],
  "exclude": ["node_modules"]
}
