{
  "extends": "@serlo/typescript-config/base.json",
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"],
      "@editor/*": ["../../packages/editor/src/*"]
    },
    "plugins": [{ "name": "next" }],
    "module": "ES2022",
    "moduleResolution": "bundler"
  },
  "include": [
    "custom.d.ts",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "shared/tailwind-base.js"
  ],
  "exclude": ["node_modules"]
}
